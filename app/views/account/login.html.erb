%>

<%= "login.html" %>

<% if flash[:notice] -%>
	<div id="notice" ><%= flash[:notice] %></div>
<% end -%>

<% form_tag({:controller => :users, :action => :login}, {:method => :post}) do %>
<p>
Username: <%= text_field_tag :username %>
</p>

<p>
Password: <%= password_field_tag :password %>
</p>

<%= submit_tag "Login" %>

<% end %>
