<h1>Listing rights</h1>

<%= link_to 'Synchronize rights', synch_rights_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Controller</th>
    <th>Action</th>
  </tr>

<% for right in @rights %>
  <tr>
    <td><%=h right.name %></td>
    <td><%=h right.controller %></td>
    <td><%=h right.action %></td>    
  </tr>
<% end %>
</table>

