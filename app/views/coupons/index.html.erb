<h1>Listing coupons</h1>

<table>
  <tr>
    <th>User</th>
    <th>Code</th>
  </tr>

<% for coupon in @coupons %>
  <tr>
    <td><%=h coupon.user.username %></td>
    <td><%=h coupon.code %></td>
    <td><%= link_to 'Show', coupon_path( coupon ) %></td>
    <td><%= link_to 'Edit', edit_coupon_path( coupon ) %></td>
    <td><%= link_to 'Destroy', coupon_path( coupon ), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New coupon', new_coupon_path %>
