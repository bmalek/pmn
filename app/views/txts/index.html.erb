<h1>Listing txts</h1>

<table>
  <tr>
    <th>Sid</th>
    <th>To</th>
    <th>From</th>
    <th>Body</th>
    <th>Direction</th>
  </tr>

<% for txt in @txts %>
  <tr>
    <td><%=h txt.sid %></td>
    <td><%=h txt.to %></td>
    <td><%=h txt.from %></td>
    <td><%=h txt.body %></td>
    <td><%=h txt.direction %></td>
    <td><%= link_to 'Show', txt %></td>
    <td><%= link_to 'Edit', edit_txt_path(txt) %></td>
    <td><%= link_to 'Destroy', txt, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

