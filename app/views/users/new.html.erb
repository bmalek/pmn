<h1>New user</h1>

<% form_for @user, :url => {:action => "verify"} do |f| %>
  <%= f.error_messages %>

<%=h @challenge_code %>

  <p>
    <%= f.label :countrycode %><br />
    <%= f.text_field :countrycode %>
  </p>
  <p>
    <%= f.label :areacode %><br />
    <%= f.text_field :areacode %>
  </p>
  <p>
    <%= f.label :primarynumber %><br />
    <%= f.text_field :primarynumber %>
  </p>
  <p>
    <%= f.submit "Verify" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
