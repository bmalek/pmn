<%= "twilio_sms" %>


<% form_tag '/home/twilio_sms' do %>

  <p>
  <b>To:</b> <%= text_field_tag :To %> <br />

  <b>From:</b> <%= text_field_tag :From %> <br />

  <b>Body:</b> <%= text_area_tag :Body %> <br />
  </p>

  <p>
    <%= submit_tag 'Send SMS' %> | <%= link_to 'Txts', txts_path %>
  </p>

<% end %>